<% include partials/header %>

<!-- header -->
<header class="jumbotron">
  <div class="container">
    <h1>This is the motors page!</h1>
    <p>Take a look at the best looking bikes in the world</p>
    <p>
      <a class="btn btn-primary btn-large" href="motors/new">Add New Moto</a>
    </p>
  </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap">
  <% motocycles.forEach(motocycle => { %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail">
      <div class="caption">
        <h4><%=motocycle.name%></h4>
        <h5><em><%=motocycle.brand%></em></h5>
      </div>
      <img src="<%=motocycle.image%>" alt="photo" />
    </div>
  </div>
  <% }); %>
</div>

<% include partials/footer %>
