<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center">Show The World Your Motocycle</h1>
    <div style="width: 30%; margin: 40px  auto">
        <!-- enctype = allows fileupload feature -->
      <form action="/motocycles" method="POST" enctype="multipart/form-data"> 
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="motocycle[name]"
            placeholder="Name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="motocycle[brand]"
            placeholder="Brand"
          />
        </div>
        <div class="form-group">
          <!-- <label for="image"> Image </label> -->
          <input
            class="form-control"
            onclick=image.click();
            placeholder='Image'
          />
          
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="motocycle[price]"
            min="1"
            step="1"
            placeholder="Price Paid"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="motocycle[year]"
            placeholder="Year Made"
          />
        </div>
        <div class="form-group">
          <!-- will try here -->
          <textarea
            class="input form-control"
            class="form-control"
            type="text"
            name="motocycle[description]"
            placeholder="Tell us a little something about your moto here..."
          ></textarea>
        </div>
        <div class="form-group">
          <button
            class="btn btn-lg btn-default btn-block btn-primary"
            type="submit"
          >
            Submit
          </button>
        </div>
        <a href="/motocycles">Back</a>
                <!-- hidden property for image upload -->
        <input
            class="form-control"
            type="file"
            id="image"
            name="image"
            accept="image/*"
            required
            style="visibility:hidden"
          />
      </form>
      
    </div>
  </div>
</div>



<% include ../partials/footer %>
