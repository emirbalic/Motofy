<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Motofy</p>
      <div class="list-group">
        <li class="list-group-item active">info</li>
        <li class="list-group-item">info</li>
        <li class="list-group-item">info</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= motocycle.image %>" alt="Image" />
        <div class="caption">
          <h4 class="pull-right">Price paid: $10000</h4>
          <h4><%= motocycle.name %></h4>
          <p><%= motocycle.brand %></p>
          <p><%= motocycle.description %></p>
          <p>Submitted by: <em> <%= motocycle.author.username %> </em></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/motocycles/<%=motocycle._id%>/comments/new"
            >Add New Comment
          </a>
        </div>
        <hr />
        <% motocycle.comments.forEach((comment) => { %>
        <div class="row">
          <div class="col-md-12">
            <strong> <%= comment.author.username %> </strong>
            <span class="pull-right"> 10 days ago </span>
            <p><%= comment.text %></p>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
