<% include ../partials/header %>

<div class="bg" style="background-color:rgb(53, 104, 105);">
  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <%if (currentUser && currentUser.isAdmin) { %>
        <h1>Welcome to Motofy <%=currentUser.username%> !</h1>
        <% } else {%>
        <h1>Welcome to Motofy!</h1>
        <% } %>
        <p>Take a look at the best looking bikes in the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="motocycles/new"
            >Add New Moto</a
          >
        </p>
        
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap">
      <!-- fuzzy search results   -->
      <div class="col-md-12">
            <% if(noMatch !== null) {%>
            <h3>
              <%= noMatch %>
            </h3>
            <% } %>
          </div>
      <% motocycles.forEach(motocycle => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <a href="/motocycles/<%=motocycle._id%>">
            <img src="<%=motocycle.image%>" alt="photo" />
          </a>
          <div class="caption">
            <h4><%=motocycle.name%></h4>
            <h5><strong><%=motocycle.brand%></strong></h5>
            <p>
              <a href="/motocycles/<%=motocycle._id%>" class="btn btn-primary"
                >More Info</a
              >
            </p>
            <h5><em><%=motocycle.description%></em></h5>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>
<% include ../partials/footer %>
