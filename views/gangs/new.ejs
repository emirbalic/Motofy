<% include ../partials/header %>

<div class="container">
    <div class="row">
      <h1 style="text-align:center">Create Your Gang!</h1>
      <div style="width: 30%; margin: 40px  auto">
          <!-- enctype = allows fileupload feature -->
        <form action="/gangs" method="POST" enctype="multipart/form-data"> 
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="gang[name]"
              placeholder="Name of your Gang"
            />
          </div>
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="gang[city]"
              placeholder="City of your Gang"
            />
          </div>
          <div class="form-group">
            <!-- <label for="image"> Image </label> -->
            <input
              class="form-control"
              onclick=image.click();
              placeholder='Coat of Arms'
            />
            
          </div>
