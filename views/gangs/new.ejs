            <!-- will try here -->
            <textarea
              class="input form-control"
              class="form-control"
              type="text"
              name="gang[description]"
              placeholder="What is your crew all about..."
            ></textarea>
          </div>
          <div class="form-group">
            <button
              class="btn btn-lg btn-default btn-block btn-primary"
              type="submit"
            >
              Submit
            </button>
          </div>
          <a href="/gangs">Back</a>
                  <!-- hidden property for image upload -->
          <input
              class="form-control"
              type="file"
              id="image"
              name="image"
              accept="image/*"
              required
              style="visibility:hidden"
            />
        </form>
        
      </div>
    </div>
