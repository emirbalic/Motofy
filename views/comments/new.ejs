<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center">
      Give us your comment to <%= motocycle.name %>
    </h1>
    <div style="width: 30%; margin: 40px  auto">
      <form action="/motocycles/<%= motocycle._id %>/comments" method="POST">
        <div class="form-group">
          <textarea
            class="input form-control"
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="What do you think of it..?"
          ></textarea>
        </div>
        <!--
          <div class="form-group">
            <input
              class="form-control"
              type="text"
              name="comment[author]"
              placeholder="Author"
            />
          </div>
        -->
        <div class="form-group">
          <button
            class="btn btn-lg btn-default btn-block btn-primary"
            type="submit"
          >
            Submit
          </button>
        </div>
      </form>
      <a href="/motocycles">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
